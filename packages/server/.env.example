# Server Configuration
NODE_ENV=development
PORT=8000
API_VERSION=v1
API_PREFIX=/api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ingreedy
DB_USER=postgres
DB_PASSWORD=your-password
